rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
       allow read, write: if false;
    }
     match /users/{id} {
      allow write,delete,update,read:if false;
      allow create: if request.auth != null;   
    }
     match /profiles/{id} {
      allow read,create: if request.auth != null;
      allow write,update: if id == request.auth.uid;
      allow delete:if false;
    }
      match /welcomeEmails/{id} {
      allow read,write,update,delete: if false;
      allow create: if request.auth != null;
    }
     match /nftCollection/{id}/nftData/{name} {
     	allow create,delete,update: if id == request.auth.uid;
      allow write,read:if request.auth != null;
  	}
     match /nftMarketCollection/{id} {
     	allow create,delete,update: if id == request.auth.uid;
      allow write,read:if request.auth != null;
  	}
	}
}